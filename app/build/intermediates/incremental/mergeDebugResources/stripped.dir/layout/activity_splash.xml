<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="bottom"
    android:paddingBottom="40dp"
    android:layout_height="match_parent"
    tools:context="ca.scooter.talkufy.activities.SplashActivity">

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-7637534093966773/7489047596"/>

    <ImageView
               android:layout_width="160dp"
               android:layout_weight="1"
               android:layout_height="0dp"
               android:layout_gravity="center"
               android:src="@drawable/app_logo"/>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-7637534093966773/7489047596"/>

    <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              style="@style/TextViewHeading"
              android:textSize="22sp"
              android:gravity="center"
              android:textStyle="normal"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:layout_marginBottom="20dp"
              android:fontFamily="@font/roboto_regular"
              android:textColor="@color/gray_dark"
              android:text="@string/experience_fast_and_reliable_chat_experience"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/RoundButton"
        android:background="@drawable/button_round"
        android:text="@string/get_started"
        android:onClick="onGetStartedClick"/>

</LinearLayout>